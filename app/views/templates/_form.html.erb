<%= form_for template, html: { class: "form", data: { controller: "editor" } } do |form| %>

  <div class="form-group">
    <%= render 'shared/errors', resource: template %>
  </div>

  <div class="form-group">
    <%= form.label t('title') %>
    <%= form.text_field :title, class: "form-control", placeholder: t('title') %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :content, id: 'template_content_hidden' %>
  </div>

  <div class="form-group">
    <div id="template_content" data-editor-target="template_content"></div>
  </div>

  <div class="form-group">
    <%= form.submit nil, class: "btn btn-outline-success" %>
  </div>
<% end %>
