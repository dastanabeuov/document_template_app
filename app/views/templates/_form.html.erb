<%= form_with model: [template],
              local: true,
              data: {
                controller: "template-editor",
                current_language: I18n.locale,
                template_editor_upload_url: upload_image_template_path(template)
              } do |form| %>
  <div class="form-group mb-3">
    <%= render 'shared/errors', resource: template %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :title, t('title'), class: 'form-label' %>
    <%= form.text_field :title, class: "form-control", placeholder: t('title') %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :content, t('content'), class: 'form-label' %>
    <%= form.text_area :content, class: "form-control", data: { template_editor_target: "content" }, hidden: true %>
    <%= form.hidden_field :content, id: "template_content_hidden", data: { template_editor_target: "hiddenContent" } %>
  </div>
  <div class="form-group d-grid mb-3">
    <%= form.submit I18n.t('.save'), class: "btn btn-success" %>
  </div>
<% end %>
