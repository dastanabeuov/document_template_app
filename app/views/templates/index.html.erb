<div class="row">
  <%= render 'nav' %>
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 my-4">
    <%= render 'layouts/breadcrumbs' %>
    <h1><%= t('all_list') %></h1>
    <% @templates&.each_slice(4) do |t4| %>
      <div class="row mt-4">
        <%= render collection: t4, partial: 'templates/template', as: :template %>
      </div>
    <% end %>
    <% if can?(:create, Template) %>
      <div class="btn-group mt-3">
        <%= button_to t('new'), sample_template_templates_path, method: :post, class: "btn btn-primary", title: "Create templateocument" %>
      </div>
    <% end %>
  </main>
</div>
