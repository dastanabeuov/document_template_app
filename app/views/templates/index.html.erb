<div class="row">
  <%= render 'nav' %>
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 my-4">
    <%= render 'layouts/breadcrumbs' %>
    <h1><%= t('all_list') %></h1>
    <div class="table-responsive" data-controller="datatables" data-datatables-language-value="<%= I18n.locale %>">
      <table class="table table-hover" data-datatables-target="table">
        <thead>
          <tr>
            <th scope="col"><%= ::Template.human_attribute_name(:title) %></th>
            <th scope="col"><%= ::Template.human_attribute_name(:updated_at) %></th>
            <th scope="col" class="text-end"><%= I18n.t('.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <%= render collection: @templates, partial: 'templates/template2', as: :template %>
        </tbody>
      </table>
    </div>
    <% if can?(:create, Template) %>
      <div class="btn-group mt-3">
        <%= button_to t('new'), sample_template_templates_path, method: :post, class: "btn btn-primary" %>
      </div>
    <% end %>
  </main>
</div>
