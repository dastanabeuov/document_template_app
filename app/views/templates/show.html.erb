<div class="row">
  <%= render 'nav' %>
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
    <%= render 'layouts/breadcrumbs' %>
    <div class="p-3">
      <h1><%= @template.title %></h1>
      <div class="sun-editor-editable border rounded overflow-y-scroll h-650 p-5"><%= raw @template.content %></div>
    </div>
    <div class="btn-group pt-3">
      <% if can?(:destroy, @template) && can?(:update, @template) %>
        <%= button_to template_path(@template),
            method: :delete,
            data: { turbo_confirm: t('are_you_sure') },
            class: "btn btn-danger",
            title: t('destroy') do %>
          <i class="bi bi-trash3-fill"></i>
        <% end %>
        <%= link_to edit_template_path(@template), class: "btn btn-warning", title: t('edit') do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>
        <%= link_to templates_path, class: "btn btn-secondary", title: t('back') do %>
          <i class="bi bi-arrow-left-circle-fill"></i>
        <% end %>
      <% else %>
        <%= link_to templates_path, class: "btn btn-secondary", title: t('back') do %>
          <i class="bi bi-arrow-left-circle-fill"></i>
        <% end %>
      <% end %>
    </div>
  </main>
</div>
