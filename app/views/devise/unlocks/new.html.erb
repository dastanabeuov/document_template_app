<div class="row justify-content-center">
  <div class="col col-md-6">
    <div class="border rounded p-5">
      <h2><%= t('.resend_unlock_instructions') %></h2>

      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'resend-unlock-form' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="d-grid">
          <%= f.submit t('.resend_unlock_instructions'), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
