<%= form_for([company, project, document], html: { class: "form", data: { controller: "document-editor", company_id: company.id, project_id: project.id } }) do |form| %>
  <div class="form-group mb-3">
    <%= render 'shared/errors', resource: document %>
  </div>

  <div class="form-group mb-3">
    <%= form.label t('title'), class: 'form-label' %>
    <%= form.text_field :title, class: "form-control", placeholder: t('title') %>
  </div>

  <div class="form-group mb-3">
    <%= form.label t('content'), class: 'form-label' %>
    <div id="document_content" data-document-editor-target="document_content" class="content"></div>
  </div>

  <div class="form-group mb-3">
    <%= form.hidden_field :content, id: 'document_content_hidden' %>
  </div>

  <div class="form-group d-grid mb-3">
    <%= form.submit nil, class: "btn btn-success" %>
  </div>
<% end %>
