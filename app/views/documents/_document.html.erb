<div class="col-12 col-md-6 col-lg-3 mb-4 mb-lg-0">
  <% if document.company.memberships.owner.exists?(user_id: current_user.id) %>
    <div class="card border-danger mb-3">
  <% else %>
    <div class="card border-primary mb-3">
  <% end %>
      <div class="card-header"><%= document.updated_at %></div>
      <div class="card-body">
        <h5 class="card-title"><%= document.title.truncate(20) %></h5>
        <p class="card-text"><%= get_text(document.content).truncate(47) %></p>
          <p class="card-link"><%= link_to document.title.truncate(10), document_path(document), data: { turbo_frame: "right-panel" } %></p>
      </div>
    </div>
</div>
