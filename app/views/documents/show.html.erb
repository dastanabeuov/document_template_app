<div class="row">
  <%= render 'nav' %>
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
    <%= render 'layouts/breadcrumbs' %>
    <div class="p-3">
      <h1><%= @document.title %></h1>
      <div class="sun-editor-editable border rounded overflow-y-scroll h-650 p-5"><%= Sanitize.fragment(@document.content) %></div>
    </div>
    <div class="btn-group pt-3">
      <% if can?(:manage, @document) %>
        <%= button_to company_project_document_path(@company, @project, @document), method: :delete, data: { turbo_confirm: t('are_you_sure') }, class: "btn btn-danger", title: t('destroy') do %>
          <i class="bi bi-trash3-fill"></i>
        <% end %>
        <%= link_to edit_company_project_document_path(@company, @project, @document), class: "btn btn-warning", title: t('edit') do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>
        <%= link_to company_project_documents_path(@company, @project), class: "btn btn-secondary", title: t('back') do %>
          <i class="bi bi-arrow-left-circle-fill"></i>
        <% end %>
      <% else %>
        <%= link_to company_project_documents_path(@company, @project), class: "btn btn-secondary", title: t('back') do %>
          <i class="bi bi-arrow-left-circle-fill"></i>
        <% end %>
      <% end %>
    </div>
  </main>
</div>
