<div class="row">
  <%= render 'nav' %>

  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
    <%= render 'layouts/breadcrumbs' %>

    <h1><%= @document.title %></h1>
    <div id="show_content"><%= display_content(@document.content) %></div>

    <% if can?(:manage, @document) %>
      <div class="btn-group pt-5">
        <%= button_to t('destroy'), company_project_document_path(@company, @project, @document), method: :delete, data: { "turbo-confirm": 'Are you sure?' }, class: "btn btn-danger" %>
        <%= link_to t('edit'), edit_company_project_document_path(@company, @project, @document), class: "btn btn-warning" %>
        <%= link_to t('back'), company_project_documents_path(@company, @project), class: "btn btn-secondary" %>
      </div>
    <% else %>
      <div class="btn-group pt-5">
        <%= link_to t('back'), company_project_documents_path(@company, @project), class: "btn btn-secondary" %>
      </div>
    <% end %>

    <%= render 'shared/footer' %>
  </main>
</div>
