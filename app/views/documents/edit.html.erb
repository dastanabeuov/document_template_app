<div class="row">
  <%= render 'nav' %>

  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
    <%= render 'layouts/breadcrumbs' %>

    <div class="border rounded p-3">
      <h1><%= t('edit') %></h1>
      <%= render "form", company: @company, project: @project, document: @document %>
    </div>

    <div class="btn-group position-fixed bottom-0 end-50" style="z-index: 1000;">
      <%= link_to t('back'), company_project_document_path(@company, @project, @document), class: "btn btn-secondary" %>
    </div>

    <%= render 'shared/footer' %>
  </main>
</div>
