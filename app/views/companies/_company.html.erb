<% row_class = if admin
                  ''
                elsif company.memberships.owner.exists?(user_id: current_user.id)
                  'table-danger'
                else
                  'table-primary'
                end %>

<tr class="<%= row_class %>" style="cursor: pointer;">
  <td>
    <%= company.name %>
  </td>
  <td><small><%= company.updated_at %></small></td>
  <td>
    <span class="badge bg-primary rounded-pill"><%= company.memberships.count %></span>
  </td>
  <td class="text-end">
    <%= link_to company_path(company), class: "btn btn-sm btn-outline-primary" do %>
      <span class="ms-2" title="<%= I18n.t('.open') %>"><%= I18n.t('.open') %></span>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-short" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8"/>
      </svg>
    <% end %>
  </td>
</tr>
