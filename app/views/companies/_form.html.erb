<%= form_for(company, html: { class: 'new-company-form' }) do |f| %>
  <%= render "shared/errors", resource: @company %>

  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="d-grid">
    <%= f.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
