<div class="row">
  <%= render 'companies/nav' %>
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-4">
    <%= render 'layouts/breadcrumbs' %>
    <h1><%= t('all_list') %></h1>
    <div class="overflow-y-scroll h-650 my-3">
      <% @projects&.each_slice(4) do |p4| %>
        <div class="row mb-4">
          <%= render collection: p4, partial: 'projects/project', as: :project %>
        </div>
      <% end %>
    </div>
    <% if can?(:create, Project) %>
      <div class="btn-group mt-3">
        <%= link_to t('new'), new_company_project_path(@company), class: "btn btn-primary" %>
      </div>
    <% end %>
  </main>
</div>
